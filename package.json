{
  "name": "apple-hig-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server providing up-to-date Apple Human Interface Guidelines",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "apple-hig-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "clean:build": "npm run clean && npm run build",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "health-check": "node dist/health-check.js"
  },
  "keywords": [
    "mcp",
    "apple",
    "design",
    "hig",
    "human-interface-guidelines",
    "ai",
    "developer-tools"
  ],
  "author": "Tanner Maasen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tannermaasen/apple-hig-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tannermaasen/apple-hig-mcp/issues"
  },
  "homepage": "https://github.com/tannermaasen/apple-hig-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cheerio": "^1.0.0-rc.12",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}