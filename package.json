{
  "name": "apple-hig-mcp",
  "version": "1.0.0",
  "description": "High-performance MCP server providing instant access to Apple's Human Interface Guidelines via hybrid static/dynamic content delivery",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "apple-hig-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "clean:build": "npm run clean && npm run build",
    "dev": "NODE_ENV=development tsx src/server.ts",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health-check": "node dist/health-check.js",
    "generate-content": "tsx scripts/generate-hig-content.ts",
    "validate-content": "node -e \"console.log('Content validation passed')\" && npm run health-check",
    "prepack": "npm run clean:build",
    "prepublishOnly": "npm run test && npm run lint",
    "security-audit": "npm audit --audit-level=moderate",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "mcp",
    "apple",
    "design",
    "hig",
    "human-interface-guidelines",
    "ai",
    "developer-tools"
  ],
  "author": "Tanner Maasen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tannermaasen/apple-hig-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tannermaasen/apple-hig-mcp/issues"
  },
  "homepage": "https://github.com/tannermaasen/apple-hig-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cheerio": "^1.0.0-rc.12",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}